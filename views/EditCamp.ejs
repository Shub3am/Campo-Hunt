<%- include('./templates/header', {title: "Editing"}) %>
  <body>
    <%-include("./templates/navbar.ejs") %>
    <div class="m-5 mx-auto p-3 col-4">
      <h1 class="text-center">New Campground</h1>
    <form method="POST" novalidate class="validation d-flex flex-column" action="/camps/<%=camp.id%>/edit?_method=put">
      <input class="mb-3 form-control" type="text" required name="camp[title]" value="<%=camp.title%>" />
      <input class="mb-3 form-control" type="text" required name="camp[location]" value="<%=camp.location%>" />
      <input class="mb-3 form-control" type="number" required min="1" name="camp[price]" value="<%=camp.price%>" />
      <button type="submit" class=" col-3 btn btn-success">Submit</button>
    </form>
    <a href="/camps/<%=camp.id%>"><button class="my-3 btn btn-dark">Go Back</button></a>
  </div>
    <%-include("./templates/footer")%>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
    <script src="/ClientValidation.js"></script>
  </body>
</html>
