<%- include('./templates/header', {title: "Add New Place"}) %>


  <body>
    <%- include("./templates/navbar.ejs") %>
    
    <div class="m-5 mx-auto p-3 col-4 ">
      <h1 class="text-center">New Campground</h1>
    <form method="POST" class="d-flex flex-column validation" action="/camps/new" novalidate>
      <label class="form-label mb-1" for="place">Enter Place Name</label>
      <input class="form-control mb-3 " required type="text" name="camp[place]" id="place" placeholder="Enter Place Name: " />
      <label class="form-label mb-1" for="location">Location</label>
      <input class="form-control mb-3" required type="text" id="location" name="camp[location]" placeholder="Enter Location: " />

      <label class="form-label mb-1" for="price">Price</label>
      <input
class="form-control mb-3 "         type="number"
        name="camp[price]"
        min="1"
        required
        id="price"
        placeholder="Estimated Expenditure Cost: "
      />
      <button type="submit" class=" col-3 btn btn-success">Submit</button>
    </form>
    <a href="/"><button class="my-3 btn btn-dark">All Camps</button></a>
    </div>

    <%- include("./templates/footer") %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
    <script src="/ClientValidation.js"></script>
    
  </body>
</html>


